<p style="color: green"><%= notice %></p>

<div>
  <%= link_to 'Perfil', user_path(@user) %>
  <%= link_to 'Sair', destroy_user_session_path, data: { turbo_method: :delete } %>
</div>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Abrir thread", post %>
    </p>
  <% end %>
</div>

<%= link_to "Criar", new_post_path %>
