<div class="d-flex justify-content-between align-items-center bg-dark p-3 rounded">
  <div>
    <%= link_to 'Perfil', user_path(current_user), class: 'text-white me-3' %>
    <%= link_to 'Sair', destroy_user_session_path, data: { turbo_method: :delete }, class: 'text-white' %>
  </div>
  <h1 class="mb-0 text-light">Posts</h1>
  <%= link_to "Criar", new_post_path, class: 'btn btn-success' %>
</div>
<div class="container">
  <div class="filters-container mt-4">
    <%= search_form_for @q, url: posts_path, html: { method: :get, class: 'form-inline' } do |f| %>
      <div class="input-group mb-3">
        <%= f.search_field :title_cont, class: 'form-control', placeholder: 'Pesquisar por tÃ­tulo' %>
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
      </div>
    <% end %>
  </div>
  <div id="posts" class="mt-3">
    <% @posts.each do |post| %>
      <%= render post %>
      <p><%= link_to "Abrir thread", post, class: 'post-link btn btn-outline-primary mt-2' %></p>
    <% end %>
  </div>
</div>