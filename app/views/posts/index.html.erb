<div class="home">
  <div class="bg-dark p-3 rounded header">
    <div class="container d-flex justify-content-between align-items-center text-white">
      <%= link_to "Criar Post", new_post_path, class: 'btn btn-success home-link' %>
      <h1 class="mb-0">Home</h1>
      <div>
        <%= link_to 'Perfil', user_path(current_user), class: 'text-white me-3 home-link' %>
        <%= link_to 'Sair', destroy_user_session_path, data: { turbo_method: :delete }, class: 'text-white logout-link' %>
      </div>
    </div>
  </div>

  <div class="container mt-3">
    <%= render partial: 'search_form' %>
    <div id="posts" class="mt-3">
      <% @posts.each do |post| %>
        <%= render post %>
        <p><%= link_to "Abrir thread", post, class: 'post-link btn btn-outline-primary mt-2' %></p>
      <% end %>
    </div>
  </div>
</div>

