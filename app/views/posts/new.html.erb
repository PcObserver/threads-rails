<div class="home">
  <div class="bg-dark p-3 rounded header">
    <div class="container d-flex justify-content-between align-items-center text-white">
      <h1 class="mb-0">Novo Post</h1>
      <div>
        <%= link_to 'Home', root_path, class: 'home-link' %>
        <%= link_to 'Perfil', user_path(current_user), class: 'text-white me-3 home-link' %>
        <%= link_to 'Sair', destroy_user_session_path, data: { turbo_method: :delete }, class: 'text-white logout-link' %>
      </div>
    </div>
  </div>
  <div class="container" style="margin-top: 20px;">
    <%= render "form", post: @post %>
  </div>
</div>
