<%= form_with(model: post) do |form| %>
  <%= form.hidden_field :author_id, value: current_user.id %>

  <% if post.errors.any? %>
    <div style="color: red; margin-bottom: 20px;">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 20px;">
    <%= form.label :title, style: "display: block; color: #fff;" %>
    <%= form.text_field :title, style: "width: 100%; padding: 0.375rem; font-size: 1rem; line-height: 1.5; color: #495057; background-color: #fff; background-clip: padding-box; border: 1px solid #ced4da; border-radius: 0.25rem; transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;" %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :body, style: "display: block; color: #fff;" %>
    <%= form.text_area :body, style: "width: 100%; padding: 0.375rem; font-size: 1rem; line-height: 1.5; color: #495057; background-color: #fff; background-clip: padding-box; border: 1px solid #ced4da; border-radius: 0.25rem; transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;" %>
  </div>

  <div>
    <%= form.submit 'Create Post', style: "color: #fff; background-color: #007bff; border-color: #007bff; padding: 0.375rem 0.75rem; font-size: 1rem; line-height: 1.5; border-radius: 0.25rem; transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;" %>
  </div>
<% end %>