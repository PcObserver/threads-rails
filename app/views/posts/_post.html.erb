<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
  <p class="d-flex justify-content-between align-items-center">
    <strong>Author: <%= link_to post.author.name, user_path(post.author) %></strong>
    <span class="domain-tags-container d-flex">
      <% post.author.knowledge_domains.order(stars: :desc).limit(3).each_with_index do |domain, index| %>
