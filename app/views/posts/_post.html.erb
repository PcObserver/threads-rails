<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= post.author.name %>

    <div class="domain-tags-container">
      <% post.author.knowledge_domains.order(stars: :desc).limit(3).each do |domain| %>
        <div><%= domain.name %></div>
      <% end %>
    </div>
  </p>
</div>
